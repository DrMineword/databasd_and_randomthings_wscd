    <script>
        // Example Unix timestamps (in milliseconds)
        const artifactBoostEnd = 1718192400000; // Example timestamp
        const competitionEnd = 1718200000000;  // Example timestamp

        function formatTimestamp(ms) {
            return `<t:${Math.floor(ms / 1000)}:F>`; // Discord-style timestamp
        }

        // Check if artifact boost is still active
        const now = Date.now();
        document.getElementById('boostStatus').innerText = 
            now > artifactBoostEnd ? "Boost has ended." : "Boost is active!";

        // Format competition end time
        document.getElementById('timeEnded').innerHTML = formatTimestamp(competitionEnd);
    </script>

